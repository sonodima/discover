<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/sonodima/discover</PackageProjectUrl>
    <RepositoryUrl>https://github.com/sonodima/discover</RepositoryUrl>
    <PackageTags>rendering, graphics, discord, hijack</PackageTags>
  </PropertyGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="call package.bat" />
  </Target>

  <ItemGroup>
	<EmbeddedResource Include="renderer.zip">
	  <Visible>false</Visible>
	</EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="6.0.1" />
    <PackageReference Include="WebSocketSharp-netstandard" Version="1.0.1" />
  </ItemGroup>
	
</Project>
